{
  "name": "solana-escrow-system",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "A secure and feature-rich escrow system built on Solana blockchain",
  "main": "index.js",
  "keywords": [
    "solana",
    "escrow",
    "blockchain",
    "smart-contract",
    "defi",
    "anchor"
  ],
  "author": "polymatx <farid.vosoughi.65@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/polymatx/escrow-system.git"
  },
  "bugs": {
    "url": "https://github.com/polymatx/escrow-system/issues"
  },
  "homepage": "https://github.com/polymatx/escrow-system#readme",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:unit": "anchor test --skip-local-validator",
    "build": "anchor build",
    "clean": "anchor clean",
    "deploy:localnet": "anchor deploy --provider.cluster localnet",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "setup": "chmod +x scripts/*.sh && ./scripts/setup.sh",
    "create-keypair": "./scripts/create-keypair.sh",
    "start:validator": "solana-test-validator --reset",
    "start:monitoring": "node monitoring/program-monitor.js",
    "example": "ts-node client/example-usage.ts",
    "simple-example": "ts-node client/simple-example.ts",
    "working-example": "ts-node client/working-example.ts",
    "js-example": "node client/working-example.js"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.4.8",
    "@solana/web3.js": "^1.95.2",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
