# Development Environment Configuration

# Solana RPC Endpoints
SOLANA_RPC_LOCALNET=http://127.0.0.1:8899
SOLANA_RPC_DEVNET=https://api.devnet.solana.com
SOLANA_RPC_MAINNET=https://api.mainnet-beta.solana.com

# Premium RPC Endpoints (optional, for production)
# SOLANA_RPC_QUICKNODE=https://your-endpoint.solana-mainnet.quiknode.pro/your-key/
# SOLANA_RPC_ALCHEMY=https://solana-mainnet.g.alchemy.com/v2/your-key
# SOLANA_RPC_HELIUS=https://mainnet.helius-rpc.com/?api-key=your-key

# Program Configuration
PROGRAM_ID=EscrowProgram11111111111111111111111111111
PROGRAM_NAME=escrow_system

# Default Keypair Paths
SOLANA_KEYPAIR_LOCALNET=~/.config/solana/id.json
SOLANA_KEYPAIR_DEVNET=~/.config/solana/devnet-keypair.json
SOLANA_KEYPAIR_MAINNET=~/.config/solana/mainnet-keypair.json

# Test Configuration
TEST_TIMEOUT=60000
TEST_VALIDATOR_RESET=true

# Monitoring Configuration (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Development Settings
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# Build Configuration
ANCHOR_VERSION=0.29.0
SOLANA_VERSION=1.18.18
RUST_VERSION=stable
